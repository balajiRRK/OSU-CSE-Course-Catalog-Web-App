<!-- this will set the title of tab to New Course  -->
<% content_for :title, "New Course" %>

<div class="row">
  <div class="col-4 offset-4">
    <div class="card">
      <div class="card-header text-center">
        <!-- this is the heading to show that this is a new course form -->
        <h1>New Course</h1>
      </div>
      <div class="card-body">
        <!-- this is form to create a new course  -->
        <%= form_with(model: @course) do |form| %>
          <div>
            <!-- this is the label for catalog number field  -->
            <%= form.label :catalog_number, style: "display: block" %>
            <!-- this is the input field for catalog number, where user can enter the catalog number -->
            <%= form.text_field :catalog_number, class: "form-control" %>
          </div>

          <div>
            <!-- this is the label for course title field  -->
            <%= form.label :title, style: "display: block" %>
            <!-- this is the input field for course title, where user can enter the course title -->
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div>
            <!-- this is the label for course description field  -->
            <%= form.label :description, style: "display: block" %>
            <!-- this is the input field for course description, where user can enter the course description -->
            <%= form.text_area :description, class: "form-control" %>
          </div>

          <div>
            <!-- this is the label for short description field  -->
            <%= form.label :short_description, style: "display: block" %>
            <!-- this is the input field for short description, where user can enter the short description -->
            <%= form.text_field :short_description, class: "form-control" %>
          </div>

          <div>
            <!-- this is the label for course component field  -->
            <%= form.label :component, style: "display: block" %>
            <!-- this is the input field for course component, where user can enter the course component -->
            <%= form.text_field :component, class: "form-control" %>
          </div>

          <div>
            <!-- this is the label for term field  -->
            <%= form.label :term, style: "display: block" %>
            <!-- this is the input field for term, where user can enter the term -->
            <%= form.text_field :term, class: "form-control" %>
          </div>

          <div>
            <!-- this is the label for campus field  -->
            <%= form.label :campus, style: "display: block" %>
            <!-- this is the input field for campus, where user can enter the campus -->
            <%= form.text_field :campus, class: "form-control" %>
          </div>

          <div>
            <!-- this is the label for subject field  -->
            <%= form.label :subject, style: "display: block" %>
            <!-- this is the input field for subject, where user can enter the subject -->
            <%= form.text_field :subject, class: "form-control" %>
          </div>

          <div class="mt-2">
            <!-- this is the button to submit the form, clicking on it will send data to controller to save to database -->
            <%= form.submit "Create Course", class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="mt-3">
          <!-- this is link to go back to all the courses page -->
          <%= link_to "Back to Courses", courses_path %>
        </div>
      </div>
    </div>
  </div>
</div>
